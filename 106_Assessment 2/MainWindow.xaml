<Window x:Class="_106_Assessment_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_106_Assessment_2"
        xmlns:userControls="clr-namespace:_106_Assessment_2.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Button Height="60" Width="60" 
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Grid.Row="0"
                    Margin="10 0">
                <Image Source="/Resources/left-arrow-circle.png" Stretch="Fill"/>
            </Button>

            <StackPanel Grid.Row="1">
                <StackPanel.Resources>
                    <Style TargetType="userControls:SidebarBtn">
                        <Setter Property="Margin" Value="0 10"/>
                    </Style>
                </StackPanel.Resources>
                
                <userControls:SidebarBtn PageIcon="/Resources/home.png" PageName="Home"/>
                <userControls:SidebarBtn PageIcon="/Resources/calendar.png" PageName="Events / Booking"/>
                <userControls:SidebarBtn PageIcon="/Resources/compass.png" PageName="Things to do"/>
                <userControls:SidebarBtn PageIcon="/Resources/book.png" PageName="Park Information"/>
                <userControls:SidebarBtn PageIcon="/Resources/community.png" PageName="Community"/>
                <userControls:SidebarBtn PageIcon="/Resources/help.png" PageName="Help / Contact"/>
            </StackPanel>

            <StackPanel Grid.Row="2">
                <StackPanel.Resources>
                    <Style TargetType="userControls:SidebarBtn">
                        <Setter Property="Margin" Value="0 10"/>
                    </Style>
                </StackPanel.Resources>

                <userControls:SidebarBtn PageIcon="/Resources/profile.png" PageName="Sign In"/>
                <userControls:SidebarBtn PageIcon="/Resources/setting.png" PageName="Settings"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
