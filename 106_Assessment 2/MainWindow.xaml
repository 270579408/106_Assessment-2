<Window x:Class="_106_Assessment_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_106_Assessment_2"
        xmlns:userControls="clr-namespace:_106_Assessment_2.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1300"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen" Background="#FFF8F8F8" ResizeMode="CanResizeWithGrip">
    <Window.Resources>

        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="10 5 20 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="0 10">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Source="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}}" 
                                       Width="24" Height="24" Margin="10 0"/>
                                <TextBlock Text="{TemplateBinding Content}" 
                                           VerticalAlignment="Center" Margin="10 0" 
                                           Foreground="{TemplateBinding Foreground}"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E6E6E6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="NavColumn" Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="Sidebar" Background="#F0F0F0" BorderBrush="#DDD" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="60">
                        <Button x:Name="MenuToggleButton" Content="☰" Width="40" Height="40" 
                                FontSize="24" Background="Transparent" BorderBrush="Transparent"
                                Click="MenuToggleButton_Click" Cursor="Hand"
                                Margin="10 0 0 0"/>
                        <TextBlock x:Name="AppTitle" Text="Onewhero Bay" FontSize="20" FontWeight="SemiBold" 
                                   VerticalAlignment="Center" Margin="10 0 0 0"/>
                    </StackPanel>

       
                    <StackPanel>
                        <Button Style="{StaticResource NavButtonStyle}" Tag="Resources/home.png" Content="Home" Click="Home_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Tag="Resources/calendar.png" Content="Events / Booking" Click="Events_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Tag="Resources/compass.png" Content="Things To Do" Click="Things_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Tag="Resources/book.png" Content="Park Information" Click="Park_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Tag="Resources/community.png" Content="Community" Click="Community_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Tag="Resources/help.png" Content="Help / Contact" Click="Help_Click"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="10" Grid.Row="2">
                    <Button Style="{StaticResource NavButtonStyle}" Tag="Resources/profile.png" Content="Login" Click="LogIn_Click" x:Name="LoginSideBarOption"/>
                    <Button Style="{StaticResource NavButtonStyle}" Tag="Resources/setting.png" Content="Settings" Click="Settings_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Background="White"/>

    </Grid>
</Window>