<Window x:Class="_106_Assessment_2.Common.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_106_Assessment_2.Common"
        mc:Ignorable="d"
        Title="AdminWindow" Height="800" Width="1300">
    <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left navigation -->
            <StackPanel Background="#F5F5F5" Grid.Column="0">
                <TextBlock Text="Admin Panel"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="20 40 0 30"/>

                <Button Content="Homepage"
                    Click="Dashboard_Click"
                    Style="{StaticResource NavButtonStyle}"/>

                <Button Content="Event Management"
                    Click="EventManagement_Click"
                    Style="{StaticResource NavButtonStyle}"/>

                <Button Content="Visitor Management"
                    Click="VisitorManagement_Click"
                    Style="{StaticResource NavButtonStyle}"/>

                <Button Content="Generate Reports"
                    Click="Report_Click"
                    Style="{StaticResource NavButtonStyle}"/>

                <Button Content="Message Center"
                    Click="MessageCenter_Click"
                    Style="{StaticResource NavButtonStyle}"/>

                <Button Content="Log out"
                    Margin="0 40 0 0"
                    Click="Logout_Click"
                    Style="{StaticResource NavButtonStyle}"/>
            </StackPanel>

            <!-- Page display area -->
            <Frame x:Name="AdminFrame"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"/>
        </Grid>

    </Window>

