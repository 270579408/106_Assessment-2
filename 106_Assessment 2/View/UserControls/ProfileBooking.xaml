<UserControl x:Class="_106_Assessment_2.View.UserControls.ProfileBooking"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataGrid x:Name="BookingsGrid" AutoGenerateColumns="False" CanUserAddRows="False"
          HeadersVisibility="Column" Height="400">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Booking Name" Binding="{Binding BookingName}" Width="200"/>
            <DataGridTextColumn Header="Event Title" Binding="{Binding EventTitle}" Width="200"/>
            <DataGridTextColumn Header="Event Date" Binding="{Binding EventDate}" Width="150"/>
            <DataGridTemplateColumn Header="Actions" Width="120">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Button Content="Cancel" Width="100" Height="25" 
                            Click="CancelBookingButton_Click"
                            Tag="{Binding Id}"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
