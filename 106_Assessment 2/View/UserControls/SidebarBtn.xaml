<UserControl x:Class="_106_Assessment_2.View.UserControls.SidebarBtn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_106_Assessment_2.View.UserControls"
             mc:Ignorable="d">
    <Button Background="Transparent"
            BorderBrush="Transparent"
            Cursor="Hand"
            HorizontalContentAlignment="Left"
            Padding="20 10"
            Margin="20 0"
            Name="InnerButton">
        
        <StackPanel Orientation="Horizontal" >
            <Image Source="{Binding PageIcon, RelativeSource={RelativeSource AncestorType=UserControl}}" 
               Height="24" Width="24"/>

            <TextBlock Text="{Binding PageName, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                VerticalAlignment="Center" 
                FontSize="20" FontWeight="Normal"
                Margin="10 0"/>
        </StackPanel>
        
    </Button>
</UserControl>
