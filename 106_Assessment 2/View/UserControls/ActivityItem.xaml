<UserControl x:Class="_106_Assessment_2.View.UserControls.ActivityItem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_106_Assessment_2.View.UserControls"
      mc:Ignorable="d" >
    
    <Button Margin="20 0"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            Cursor="Hand"
            VerticalContentAlignment="Top">
        <StackPanel Margin="20 10">
            <Image Source="{Binding ActivityItemIcon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    MaxWidth="80"/>

            <TextBlock Text="{Binding ActivityItemTitle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="24"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0 10 0 0"
                       FontWeight="SemiBold"/>
        </StackPanel>
    </Button>

</UserControl>
