<UserControl x:Class="_106_Assessment_2.View.UserControls.FAQItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="root">
    <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Padding="10" Margin="5">
        <StackPanel>
            <TextBlock Text="{Binding Question, ElementName=root}"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,0,0,5"/>
            <TextBlock Text="{Binding Answer, ElementName=root}"
                       TextWrapping="Wrap"
                       Foreground="Gray"/>
        </StackPanel>
    </Border>
</UserControl>
