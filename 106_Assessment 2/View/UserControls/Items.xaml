<UserControl x:Class="_106_Assessment_2.View.UserControls.Items"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_106_Assessment_2.View.UserControls"
             mc:Ignorable="d">
    <Button Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            Padding="15"
            Cursor="Hand">
        <StackPanel>
            <Image Source="{Binding ItemIcon}" Width="60" Height="60" />
            <TextBlock Text="{Binding ItemTitle}"
                       Width="100"
                       TextWrapping="Wrap"
                       FontSize="20" 
                       TextAlignment="Center"
                       Margin="0 10 0 0"/>
        </StackPanel>
    </Button>
</UserControl>