<UserControl x:Class="_106_Assessment_2.View.UserControls.Items"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_106_Assessment_2.View.UserControls"
             mc:Ignorable="d">
    <Button Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            Padding="10"
            Cursor="Hand">
        <StackPanel>
            <Image Source="{Binding ItemIcon}" Width="80" Height="80" />
            <TextBlock Text="{Binding ItemTitle}" 
                   FontSize="20" 
                   TextAlignment="Center"
                   Margin="0 10 0 0"/>
        </StackPanel>
    </Button>
</UserControl>