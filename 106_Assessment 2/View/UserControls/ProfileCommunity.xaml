<UserControl x:Class="_106_Assessment_2.View.UserControls.ProfileCommunity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:models="clr-namespace:_106_Assessment_2.Models"
             xmlns:userControls="clr-namespace:_106_Assessment_2.View.UserControls"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ItemsControl x:Name="PostItemControl">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Width="650"
                        Margin="0 10 0 0"
                        HorizontalAlignment="Center"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="{x:Type models:Post}">
                <Border Background="White"
                    CornerRadius="12"
                    BorderBrush="#E3E3E3"
                    BorderThickness="1"
                    Padding="10"
                    Margin="0 20 0 0">
                    <userControls:PostItem Data="{Binding}"/>
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>


</UserControl>
