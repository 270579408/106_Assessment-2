<Page x:Class="_106_Assessment_2.View.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="1024"
      d:DesignWidth="1140">

    <Grid>
        <Grid Height="600" VerticalAlignment="Top">
            <Image x:Name="FeaturedEventsBannerImg" 
                   Stretch="UniformToFill" 
                   VerticalAlignment="Center"/>

            <Rectangle>
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                        <GradientStop Color="#CC000000" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch"
                  Margin="20 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0"  x:Name="prevButton" 
                        Padding="0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="prevButton_Click"> 
                    <Image Source="/Resources/left-arrow-circle-white.png" Width="50" Height="50"/>
                </Button>

                <Button Grid.Column="2" x:Name="nextButton" 
                        Padding="0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="nextButton_Click">
                    <Image Source="/Resources/right-arrow-circle-white.png" Width="50" Height="50"/>
                </Button>
            </Grid>

            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="50 30">
                <TextBlock x:Name="FeaturedEventsTitle" 
                           FontSize="44" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0 0 0 5"/>

                <TextBlock x:Name="FeaturedEventsDescription" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" />

                <StackPanel Orientation="Horizontal" Margin="0 30 0 0">
                    <Button Content="Book Now"
                            FontSize="20"
                            Padding="20 10"
                            Background="WhiteSmoke"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            x:Name="bookNow_button" 
                            Margin="0 0 20 0"
                            Cursor="Hand"/>

                    <Button Content="See more details"
                           FontSize="20"
                            Padding="20 10"
                            Background="WhiteSmoke"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            x:Name="seeDetails_button"
                            Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
