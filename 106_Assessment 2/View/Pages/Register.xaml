<Page x:Class="_106_Assessment_2.View.Pages.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SignIn" Background="White" VerticalAlignment="Center">
    <Border Background="White" Width="500">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Create an Account" FontSize="24"
                           FontWeight="SemiBold" Margin="0,0,0,30" />

            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Name" FontSize="18"/>
                <TextBox x:Name="txtName" Margin="0,5,0,0" Padding="10" FontSize="18"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Email" FontSize="18"/>
                <TextBox x:Name="txtEmail" Margin="0,5,0,0" Padding="10" FontSize="18"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,0,0,15">
                <TextBlock Text="Password" FontSize="18"/>
                <PasswordBox x:Name="pwdPassword" Margin="0,5,0,0" Padding="10" FontSize="18"/>
            </StackPanel>

            <StackPanel Grid.Row="4">
                <TextBlock Text="Confirm Password" FontSize="18"/>
                <PasswordBox x:Name="pwdConfirm" Margin="0,5,0,0" Padding="10" FontSize="18"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Margin="0,30,0,0">
                <TextBlock x:Name="FormError" Foreground="Red" FontSize="16" Height="20"/>

                <Button Content="Register" Padding="20 10" HorizontalAlignment="Right"
                            Background="#2E7DFF" Foreground="White" BorderBrush="Transparent" FontSize="18"
                            Click="Register_Click"/>

                <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                    <TextBlock Margin="6,0,0,0" VerticalAlignment="Center" FontSize="18">
                        Already have an account?
                            <Hyperlink Click="Login_Click">Log in</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Page>
