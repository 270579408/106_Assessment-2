<Page x:Class="_106_Assessment_2.View.Pages.ParkInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Park Information"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:userControls="clr-namespace:_106_Assessment_2.View.UserControls"
      mc:Ignorable="d"
      d:DesignWidth="1140"
      d:DesignHeight="1500"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled"
              Background="White">

        <StackPanel>

            <!-- Title -->
            <TextBlock Text="Park Information"
                   FontSize="36"
                   Margin="30 30 30 0"/>

            <!-- Park Information Content -->
            <Grid Margin="30 20 30 0" Height="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.75*"/>
                    <ColumnDefinition Width="0.25*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           FontSize="20"
                           TextWrapping="Wrap"
                           Margin="0 0 80 0"
                           VerticalAlignment="Top">
                    Nestled in the scenic Northland region of New Zealand, Onewhero Bay Heritage Park is a place where nature, culture, and history come together. The park celebrates New Zealand’s unique wildlife and rich Māori heritage, offering visitors a memorable journey through time and the natural world.
                        <LineBreak/>
                        <LineBreak/>
                    Established in 1987, Onewhero Bay Heritage Park was created through a community initiative to safeguard local wildlife habitats and historical sites. Over the years, it has grown into a leading eco-heritage destination, attracting visitors from across New Zealand and beyond.
                        <LineBreak/>
                        <LineBreak/>
                    Our mission is to preserve native species, honour cultural traditions, and educate visitors about the importance of conservation. Whether you’re exploring our nocturnal kiwi house, visiting the heritage museum, or walking through lush native bush, every experience reflects our commitment to protecting Aotearoa’s natural and cultural treasures.
                </TextBlock>

                <Image Grid.Column="1"
                       Source="/Resources/stick.png"
                       Stretch="Uniform"
                       VerticalAlignment="Center"/>
            </Grid>

            <StackPanel Margin="0 50 0 0">
                <TextBlock Text="Key Features" 
                           FontSize="32"
                           Margin="30 0 30 0 "/>

                <ItemsControl ItemsSource="{Binding KeyFeatures}" Margin="30 20 30 0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0 0 0 20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="400"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image Source="{Binding ImagePath}"
                                       Stretch="UniformToFill"
                                       Grid.Column="0"/>

                                <StackPanel Grid.Column="1" 
                                            VerticalAlignment="Center"
                                            Margin="30 0 0 0">
                                    <TextBlock Text="{Binding Title}" 
                                                FontSize="28"
                                                FontWeight="SemiBold"
                                                VerticalAlignment="Center"
                                                TextWrapping="Wrap"
                                               Margin="0 0 0 5"/>

                                    <TextBlock Text="{Binding Description}" 
                                               FontSize="20" 
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"
                                               Grid.Column="1"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <StackPanel Margin="0 50 0 0">
                <TextBlock Text="Opening Hours and Entry Fees" 
               FontSize="32"
               Margin="30 0 30 0 "/>

                <UniformGrid Rows="3" Columns="2" Margin="20" Width="500" Height="150" HorizontalAlignment="Left">
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="Day" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="SemiBold"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="Opening Hours" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="SemiBold"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="Moday - Friday" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="9:00 am - 5:00 pm" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="Saturday - Sunday" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="8:00 am - 6:00 pm" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
                    </Border>
                </UniformGrid>

                <TextBlock Margin="30 10 0 0" Text="Admission Fees" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="28" FontWeight="SemiBold" />

                <TextBlock Margin="30 5 0 0" FontSize="24">
                    Adults: $25
                    <LineBreak/>
                    Children (5–15): $10
                    <LineBreak/>
                    Under 5: Free
                    <LineBreak/>
                    Family Pass: $60
                </TextBlock>
            </StackPanel>
        
        
        </StackPanel>
    </ScrollViewer>
</Page>
