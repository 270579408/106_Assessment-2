<Page x:Class="_106_Assessment_2.View.Pages.ParkInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F7F7F7">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">

            <!-- MAIN TITLE -->
            <TextBlock Text="Park Information"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="#2E2E2E"
                       Margin="0 0 0 20"/>

            <!-- INTRO CARD -->
            <Border Background="White"
                    CornerRadius="12"
                    Padding="30"
                    Margin="0 0 0 30"
                    BorderBrush="#E3E3E3" BorderThickness="1"
                    Effect="{DynamicResource DefaultShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               FontSize="20"
                               Foreground="#555"
                               TextWrapping="Wrap"
                               LineHeight="30">
                        Nestled in the scenic Northland region of New Zealand, Onewhero Bay Heritage Park 
                        is a place where nature, culture, and history come together. The park celebrates 
                        New Zealand’s unique wildlife and rich Māori heritage.

                        <LineBreak/><LineBreak/>

                        Established in 1987, Onewhero Bay Heritage Park was built to safeguard native 
                        wildlife and historic sites. Today it stands as one of New Zealand’s most unique 
                        eco-heritage destinations.

                        <LineBreak/><LineBreak/>

                        We aim to preserve native species, honour cultural traditions, and educate 
                        visitors about conservation — creating a meaningful experience for all.
                    </TextBlock>

                    <Border Grid.Column="1"
                            Width="350"
                            Height="260"
                            Margin="30 0 0 0"
                            CornerRadius="12"
                            Background="#EEE"
                            ClipToBounds="True">
                        <Image Source="/Resources/stick.png"
                               Stretch="UniformToFill"/>
                    </Border>
                </Grid>
            </Border>


            <!-- KEY FEATURES -->
            <TextBlock Text="Key Features"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="#2E2E2E"
                       Margin="0 0 0 15"/>

            <ItemsControl ItemsSource="{Binding KeyFeatures}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                CornerRadius="12"
                                Padding="20"
                                Margin="0 0 0 20"
                                BorderBrush="#E3E3E3"
                                BorderThickness="1"
                                Effect="{DynamicResource DefaultShadow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border CornerRadius="10"
                                        Height="160"
                                        Margin="0 0 20 0"
                                        ClipToBounds="True">
                                    <Image Source="{Binding ImagePath}" Stretch="UniformToFill"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               Foreground="#2E2E2E"
                                               Margin="0 0 0 8"/>

                                    <TextBlock Text="{Binding Description}"
                                               FontSize="18"
                                               TextWrapping="Wrap"
                                               Foreground="#555"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


            <!-- OPENING HOURS CARD -->
            <TextBlock Text="Opening Hours and Entry Fees"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="#2E2E2E"
                       Margin="0 30 0 10"/>

            <Border Background="White"
                    CornerRadius="12"
                    Padding="30"
                    Margin="0 0 0 30"
                    BorderBrush="#E3E3E3"
                    BorderThickness="1"
                    Effect="{DynamicResource DefaultShadow}">
                <StackPanel>

                    <UniformGrid Rows="3" Columns="2" Margin="0 10 0 20">
                        <TextBlock Text="Day" FontSize="22" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Hours" FontSize="22" FontWeight="SemiBold" HorizontalAlignment="Center"/>

                        <TextBlock Text="Monday - Friday" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="9:00 am - 5:00 pm" FontSize="20" HorizontalAlignment="Center"/>

                        <TextBlock Text="Saturday - Sunday" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="8:00 am - 6:00 pm" FontSize="20" HorizontalAlignment="Center"/>
                    </UniformGrid>

                    <TextBlock Text="Admission Fees"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Margin="0 10 0 10"/>

                    <TextBlock FontSize="20" Foreground="#555" LineHeight="30">
                        Adults: $25
                        <LineBreak/>
                        Children (5–15): $10
                        <LineBreak/>
                        Under 5: Free
                        <LineBreak/>
                        Family Pass: $60
                    </TextBlock>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
