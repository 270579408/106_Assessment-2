<Page x:Class="_106_Assessment_2.View.Pages.Events"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:userControls="clr-namespace:_106_Assessment_2.View.UserControls"
      mc:Ignorable="d"
      Title="Events"
      Background="White"
      d:DesignWidth="1140" d:DesignHeight="1024">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Background="White">

        <StackPanel>

            <!-- Title -->
            <TextBlock Text="Events"
                       FontSize="32"
                       FontWeight="SemiBold"
                       Margin="30 30 30 0"/>

            <!-- Search Bar -->
            <Border Margin="30 20" CornerRadius="5" BorderThickness="1" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="/Resources/search-magnifying-glass.png" 
                           Height="25" Width="25"
                           VerticalAlignment="Center"
                           Margin="10 0"/>

                    <Grid Grid.Column="1">
                        <TextBlock x:Name="Placeholder_Searchbar"
                                   Text="Search Events..."
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   Padding="10 0"
                                   Foreground="#636363"/>

                        <TextBox x:Name="Searchbar"
                                 Height="50"
                                 Background="Transparent"
                                 BorderBrush="Transparent"
                                 FontSize="20"
                                 VerticalContentAlignment="Center"
                                 Padding="10 0"
                                 TextChanged="Searchbar_TextChanged"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Tag Scroll -->
            <Grid Margin="30 20 0 0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Arrow -->
                <Button x:Name="LeftArrowButton"
                        Content="◀"
                        Grid.Column="0"
                        Width="35" Height="35"
                        FontSize="18"
                        Background="Transparent"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        Margin="5"
                        Cursor="Hand"
                        Click="LeftArrowButton_Click"/>

                <ScrollViewer x:Name="TagScrollViewer"
                              Grid.Column="1"
                              HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Disabled"
                              Margin="10 0"
                              Cursor="Hand">
                    <ItemsControl ItemsSource="{Binding Tags}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        Margin="5 0"
                                        CornerRadius="10">
                                    <Button Content="{Binding}"
                                            Padding="10 5"
                                            FontSize="16"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="Tag_Click"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Right Arrow -->
                <Button x:Name="RightArrowButton"
                        Content="▶"
                        Grid.Column="2"
                        Width="35" Height="35"
                        FontSize="18"
                        Background="Transparent"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        Margin="5"
                        Cursor="Hand"
                        Click="RightArrowButton_Click"/>
            </Grid>

            <!-- Events -->
            <StackPanel Margin="50" HorizontalAlignment="Center" Width="1200">

                <ItemsControl ItemsSource="{Binding FilteredEvents}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"
                                       ItemWidth="400"
                                       ItemHeight="300"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="400" Height="300" Margin="0 0 20 30">

                                <Image Source="{Binding ImageUrl}"
                                       Stretch="UniformToFill"/>

                                <Rectangle>
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                            <GradientStop Color="#CC000000" Offset="0"/>
                                            <GradientStop Color="#00000000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <StackPanel VerticalAlignment="Bottom"
                                            Margin="15 0 0 50">

                                    <TextBlock Text="{Binding EventDate, StringFormat={}{0:MMM dd}}"
                                               FontSize="28"
                                               Foreground="White"
                                               FontWeight="Bold"/>

                                    <TextBlock Text="{Binding EventDate, StringFormat={}{0:dddd}}"
                                               FontSize="16"
                                               Foreground="White"
                                               FontWeight="SemiBold"/>

                                    <TextBlock Text="{Binding Title}"
                                               FontSize="20"
                                               Margin="0 10 0 0"
                                               Foreground="White"/>

                                    <!-- Hidden Button Until Hover -->
                                    <Button x:Name="BookBtn"
                                            Content="Book Now →"
                                            FontSize="20"
                                            Padding="10 5"
                                            Margin="0 10 0 0"
                                            Width="170"
                                            HorizontalAlignment="Left"
                                            Foreground="Black"
                                            Background="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Visibility="Collapsed"/>
                                </StackPanel>

                                <!-- Hover Logic -->
                                <Grid.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BookBtn"
                                                                               Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0:0:0"
                                                                            Value="{x:Static Visibility.Visible}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>

                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BookBtn"
                                                                               Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0:0:0"
                                                                            Value="{x:Static Visibility.Collapsed}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Grid.Triggers>

                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</Page>
