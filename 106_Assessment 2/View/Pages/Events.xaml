    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:_106_Assessment_2.View.UserControls"
    mc:Ignorable="d"
    d:DesignWidth="1140"
      d:DesignHeight="1024"
      Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Background="White">
        <StackPanel>
            <TextBlock Text="Events"
                     FontSize="36"
                     Margin="30 30 30 0"/>

            <Grid Margin="30 20">
                <TextBlock Text="Search Events..." VerticalAlignment="Center"/>
                <TextBox Height="50" Background="Transparent"/>
                
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
