<Page x:Class="_106_Assessment_2.View.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SignIn" Background="White" VerticalAlignment="Center">
    <Border Background="White" Width="500">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Login" FontSize="24"
                           FontWeight="SemiBold" Margin="0,0,0,30" />

            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Email" FontSize="18"/>
                <TextBox x:Name="txtEmail" Margin="0,5,0,0" Padding="10" FontSize="18"/>
            </StackPanel>

            <StackPanel Grid.Row="2">
                <TextBlock Text="Password" FontSize="18"/>
                <PasswordBox x:Name="pwdPassword" Margin="0,4,0,0" Padding="10" FontSize="18"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 30 0 0">
                <Button Content="Log in" Padding="20 10" Click="Login_Click" FontSize="18"
                            Background="#2E7DFF" Foreground="White" BorderBrush="Transparent" Cursor="Hand"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Margin="0 30 0 0">
                <TextBlock x:Name="FormError" Foreground="Red" FontSize="16" Height="20"/>

                <TextBlock FontSize="18">
                    Don't have an account?
                    <Hyperlink Click="Register_Click">Register</Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</Page>