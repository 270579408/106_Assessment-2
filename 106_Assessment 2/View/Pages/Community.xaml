<Page x:Class="_106_Assessment_2.View.Pages.Community"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:models="clr-namespace:_106_Assessment_2.Models"
      xmlns:userControls="clr-namespace:_106_Assessment_2.View.UserControls"
      Background="#F7F7F7">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">

            <!-- PAGE TITLE -->
            <TextBlock Text="Community"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="#2E2E2E"
                       Margin="0 0 0 20"/>

            <!-- POST INPUT CARD -->
            <Border Background="White"
                    CornerRadius="12"
                    Padding="20"
                    BorderBrush="#E3E3E3"
                    BorderThickness="1"
                    Margin="0 0 0 25">

                <StackPanel>

                    <!-- IMAGE PREVIEW -->
                    <Grid x:Name="SelectedImageRow"
                          Visibility="Hidden"
                          Margin="0 0 0 15">

                        <Border Width="200"
                                MaxHeight="120"
                                CornerRadius="10"
                                ClipToBounds="True"
                                BorderBrush="#D0D0D0"
                                BorderThickness="1"
                                HorizontalAlignment="Left">
                            <Image x:Name="SelectedImage"
                                   Stretch="UniformToFill"
                                   />
                        </Border>

                        <Button Width="28"
                                Height="28"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Margin="5"
                                Background="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="RemoveImage_Click">
                            <Image Source="/Resources/times.png"
                                   Width="15" Height="15"/>
                        </Button>
                    </Grid>

                    <!-- TEXTBOX + SEND -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- INPUT AREA -->
                        <Border Grid.Column="0"
                                Padding="10"
                                CornerRadius="10"
                                BorderBrush="#D0D0D0"
                                BorderThickness="1"
                                Background="White">

                            <Grid>
                                <TextBlock Text="Type a message..."
                                           x:Name="Placeholder_Input"
                                           FontSize="18"
                                           Foreground="#888"
                                           Margin="5 5 5 0"
                                           VerticalAlignment="Top"/>

                                <TextBox x:Name="MessageInput"
                                         FontSize="18"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         Height="80"
                                         TextChanged="Input_TextChanged"/>
                            </Grid>
                        </Border>

                        <!-- SEND BUTTON -->
                        <Button Grid.Column="1"
                                Margin="10 0 0 0"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="SendMessage_Click">
                            <Image Source="/Resources/sent-alt.png"
                                   Width="35"
                                   Height="35"/>
                        </Button>

                    </Grid>

                    <!-- ADD IMAGE BUTTON -->
                    <Button Background="#EFEFEF"
                            Padding="10"
                            Width="140"
                            HorizontalAlignment="Left"
                            BorderBrush="#C8C8C8"
                            BorderThickness="1"
                            Margin="0 15 0 0"
                            Cursor="Hand"
                            Click="SelectImage_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Image Source="/Resources/add.png" Width="25" Height="25" Margin="0 0 8 0"/>
                            <TextBlock Text="Add Image" FontSize="18" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </Border>



            <!-- POSTS FEED -->
            <ItemsControl x:Name="PostItemControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Width="650"
                                    Margin="0 10 0 0"
                                    HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:Post}">
                        <Border Background="White"
                                CornerRadius="12"
                                BorderBrush="#E3E3E3"
                                BorderThickness="1"
                                Padding="10"
                                Margin="0 20 0 0">
                            <userControls:PostItem Data="{Binding}"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</Page>
