<Page x:Class="_106_Assessment_2.View.Pages.Community"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Events"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:userControls="clr-namespace:_106_Assessment_2.View.UserControls"
      xmlns:models="clr-namespace:_106_Assessment_2.Models"
      mc:Ignorable="d"
      d:DesignWidth="1140"
      d:DesignHeight="1024"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Background="White">

        <StackPanel>

            <!-- Title -->
            <TextBlock Text="Community"
                       FontSize="32"
                       FontWeight="SemiBold"
                       Margin="30 30 30 0"/>

            <Grid Margin="0 30 0 5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid x:Name="SelectedImageRow" Visibility="Hidden">
                    <Image Grid.Row="0"
                       Height="Auto"
                       MaxHeight="100"
                       Stretch="Uniform"
                       Margin="30 0 0 0"
                       HorizontalAlignment="Left"
                       x:Name="SelectedImage" />

                    <Button Width="20"
                            Height="20"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Panel.ZIndex="1"
                            Margin="30 0 0 0"
                            Cursor="Hand"
                            Click="RemoveImage_Click">
                        <Image Source="/Resources/times.png"
                               Height="15"/>
                    </Button>
                </Grid>

                <Grid Margin="30 0 30 0" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                    CornerRadius="5" 
                    BorderThickness="1" 
                    BorderBrush="Black">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <TextBlock Text="Type a message..." 
                                   VerticalAlignment="Top"
                                   FontSize="20"
                                   Padding="15 10"
                                   Foreground="#636363"
                                   x:Name="Placeholder_Input"/>

                                <TextBox Height="100" 
                                         Background="Transparent" 
                                         BorderBrush="Transparent"
                                         VerticalContentAlignment="Top"
                                         FontSize="20"
                                         Padding="15 10"
                                         x:Name="MessageInput"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Visible"
                                         TextWrapping="Wrap"
                                         TextChanged="Input_TextChanged"/>
                            </Grid>

                            <Button Grid.Column="1" 
                            Background="Transparent" 
                            BorderBrush="Transparent" 
                            BorderThickness="0" 
                            Padding="0" 
                            Cursor="Hand"
                            Click="SendMessage_Click">
                                <Image Source="/Resources/sent-alt.png" 
                           Height="25" 
                           Width="25" 
                           VerticalAlignment="Center" 
                           Margin="15 0"
                           Grid.Column="1"/>
                            </Button>
                        </Grid>
                    </Border>
                    <Button Grid.Column="1"
                        Background="Transparent" 
                        BorderBrush="Transparent" 
                        BorderThickness="0"
                        Cursor="Hand"
                        Padding="10"
                        Margin="20 0 0 0"
                        Click="SelectImage_Click">
                        <Image Source="/Resources/add.png" 
                           Height="35" 
                           Width="35" 
                           VerticalAlignment="Center"
                           Grid.Column="1"/>
                    </Button>
                </Grid>
            </Grid>
            
            <ItemsControl x:Name="PostItemControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Width="600" Margin="0 50 0 0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:Post}">
                        <userControls:PostItem Data="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Page>