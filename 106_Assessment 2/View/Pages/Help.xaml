<Page x:Class="_106_Assessment_2.View.Pages.Help"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:userControls="clr-namespace:_106_Assessment_2.View.UserControls"
      mc:Ignorable="d"
      d:DesignWidth="1140"
      d:DesignHeight="1024"
      Title="Help"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Background="White">

        <StackPanel>

            <!-- Title -->
            <TextBlock Text="Help / Contact"
                       FontSize="32"
                       FontWeight="SemiBold"
                       Margin="30 30 30 0"/>

            <!-- Contact Info -->
            <Grid Margin="0 50 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Phone -->
                <Border Grid.Column="0"
                        Margin="30 0"
                        Padding="25 50"
                        Background="#E8E8E8"
                        CornerRadius="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="/Resources/phone.png" Width="50" Opacity="0.5"/>
                        <TextBlock Text="+64 6464 4646 344"
                                   FontSize="20"
                                   TextAlignment="Center"
                                   Margin="0 15 0 0"/>
                    </StackPanel>
                </Border>

                <!-- Email -->
                <Border Grid.Column="1"
                        Margin="30 0"
                        Padding="25 50"
                        Background="#E8E8E8"
                        CornerRadius="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="/Resources/email.png" Width="50" Opacity="0.5"/>
                        <TextBlock Text="onewherobay@support.com"
                                   FontSize="20"
                                   TextAlignment="Center"
                                   Margin="0 15 0 0"/>
                    </StackPanel>
                </Border>

                <!-- Address -->
                <Border Grid.Column="2"
                        Margin="30 0"
                        Padding="25 50"
                        Background="#E8E8E8"
                        CornerRadius="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="/Resources/address-location-map.png" Width="50" Opacity="0.5"/>
                        <TextBlock Text="Park Road, Onewhero Bay, New Zealand"
                                   FontSize="20"
                                   TextAlignment="Center"
                                   Margin="0 15 0 0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Opening Hours -->
            <StackPanel Margin="0 50 0 0">
                <TextBlock Text="Opening Hours"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Margin="30 0 30 10"/>

                <UniformGrid Rows="3" Columns="2"
                             Margin="30"
                             Width="500"
                             HorizontalAlignment="Left">
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="Day"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="SemiBold"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="Opening Hours"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="SemiBold"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="Monday - Friday"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="18"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="9:00 am - 5:00 pm"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="18"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="Saturday - Sunday"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="18"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="8:00 am - 6:00 pm"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="18"/>
                    </Border>
                </UniformGrid>
            </StackPanel>

            <!-- Inquiry Form -->
            <StackPanel Margin="0 30 0 0">
                <TextBlock Text="Submit an Inquiry"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Margin="30 0 0 10"/>

                <Grid>
                    <!-- Placeholder -->
                    <TextBlock Text="Type your inquiry..."
                               VerticalAlignment="Top"
                               FontSize="16"
                               Margin="50 40 0 0"
                               Foreground="#636363"
                               IsHitTestVisible="False"
                               x:Name="Placeholder_InquiryInput"/>

                    <TextBox x:Name="InquiryInput"
                             Height="200"
                             Width="700"
                             HorizontalAlignment="Left"
                             Margin="30 20 30 0"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Visible"
                             TextWrapping="Wrap"
                             BorderBrush="Black"
                             BorderThickness="1"
                             FontSize="18"
                             Padding="20"
                             Background="Transparent"
                             TextChanged="InquiryInput_TextChanged"/>
                </Grid>

                <Button Content="Submit"
                        FontSize="20"
                        Width="120"
                        Height="50"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="30 20 0 0"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
