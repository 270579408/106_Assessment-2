<Page x:Class="_106_Assessment_2.View.Pages.Help"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F7F7F7">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">

            <!-- TITLE -->
            <TextBlock Text="Help and Contact"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="#2E2E2E"
                       Margin="0 0 0 20"/>

            <!-- CONTACT CARDS -->
            <Border Background="White"
                    CornerRadius="12"
                    Padding="30"
                    Margin="0 0 0 30"
                    BorderBrush="#E3E3E3"
                    BorderThickness="1">

                <UniformGrid Columns="3" HorizontalAlignment="Stretch">

                    <!-- PHONE -->
                    <StackPanel HorizontalAlignment="Center" Margin="10">
                        <Image Source="/Resources/phone.png"
                               Width="60"
                               Opacity="0.6"
                               Margin="0 0 0 15"/>
                        <TextBlock Text="+64 6464 4646 344"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"/>
                    </StackPanel>

                    <!-- EMAIL -->
                    <StackPanel HorizontalAlignment="Center" Margin="10">
                        <Image Source="/Resources/email.png"
                               Width="60"
                               Opacity="0.6"
                               Margin="0 0 0 15"/>
                        <TextBlock Text="onewherobay@support.com"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- ADDRESS -->
                    <StackPanel HorizontalAlignment="Center" Margin="10">
                        <Image Source="/Resources/address-location-map.png"
                               Width="60"
                               Opacity="0.6"
                               Margin="0 0 0 15"/>
                        <TextBlock Text="Park Road, Onewhero Bay, New Zealand"
                                   FontSize="22"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                </UniformGrid>
            </Border>

            <!-- OPENING HOURS -->
            <TextBlock Text="Opening Hours"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="#2E2E2E"
                       Margin="0 0 0 15"/>

            <Border Background="White"
                    CornerRadius="12"
                    Padding="30"
                    Margin="0 0 0 30"
                    BorderBrush="#E3E3E3"
                    BorderThickness="1">

                <UniformGrid Rows="3" Columns="2" Margin="0 10 0 10">

                    <TextBlock Text="Day"
                               FontSize="22"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Hours"
                               FontSize="22"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Monday - Friday"
                               FontSize="20"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="9:00 am - 5:00 pm"
                               FontSize="20"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Saturday - Sunday"
                               FontSize="20"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="8:00 am - 6:00 pm"
                               FontSize="20"
                               HorizontalAlignment="Center"/>

                </UniformGrid>

            </Border>

            <!-- INQUIRY FORM -->
            <TextBlock Text="Submit an Inquiry"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="#2E2E2E"
                       Margin="0 0 0 15"/>

            <Border Background="White"
                    CornerRadius="12"
                    Padding="30"
                    Margin="0 0 0 30"
                    BorderBrush="#E3E3E3"
                    BorderThickness="1">

                <!-- StackPanel ensures Border has only one child -->
                <StackPanel>

                    <!-- Text Input -->
                    <Grid Margin="0 0 0 20">
                        <!-- Placeholder -->
                        <TextBlock Text="Type your inquiry..."
                                   FontSize="18"
                                   Foreground="#868686"
                                   Margin="20 20 0 0"
                                   VerticalAlignment="Top"
                                   IsHitTestVisible="False"
                                   x:Name="Placeholder_InquiryInput"/>

                        <TextBox x:Name="InquiryInput"
                                 Height="200"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0"
                                 Padding="20"
                                 FontSize="18"
                                 BorderBrush="#C6C6C6"
                                 BorderThickness="1"
                                 Background="Transparent"
                                 TextChanged="InquiryInput_TextChanged"/>
                    </Grid>

                    <!-- Submit Button -->
                    <Button Content="Submit"
                            Width="140"
                            Height="50"
                            HorizontalAlignment="Left"
                            FontSize="20"
                            Cursor="Hand"
                            Background="#2E7DFF"
                            Foreground="White"
                            BorderThickness="0"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
