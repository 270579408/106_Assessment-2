<Page x:Class="_106_Assessment_2.View.Pages.Help"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Events"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:userControls="clr-namespace:_106_Assessment_2.View.UserControls"
      mc:Ignorable="d"
      d:DesignWidth="1140"
      d:DesignHeight="2000"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Background="White">

        <StackPanel>
            <!-- Title -->
            <TextBlock Text="Help / Contact"
                       FontSize="36"
                       Margin="30 30 30 0"/>

            <Grid Margin="0 50 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        BorderThickness="0" 
                        Margin="30 0"
                        Padding="25 50"
                        Background="#E8E8E8">
                    <StackPanel VerticalAlignment="Center">
                        <Image Source="/Resources/phone.png" Width="50" Opacity="0.5"/>
                        <TextBlock Text="+64 6464 4646 344" 
                                   FontSize="20"
                                   TextAlignment="Center"
                                   FontWeight="Normal" 
                                   Margin="0 15 0 0"
                                   />
                    </StackPanel>
                </Border>

                <Border Grid.Column="1"
                        BorderThickness="0" 
                        Margin="30 0"
                        Padding="25 50"
                        Background="#E8E8E8">
                    <StackPanel VerticalAlignment="Center">
                        <Image Source="/Resources/email.png" Width="50" Opacity="0.5"/>
                        <TextBlock Text="onewherobay@support.com" 
                                   FontSize="20"
                                   TextAlignment="Center"
                                   FontWeight="Normal" 
                                   Margin="0 15 0 0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2"
                        BorderThickness="0" 
                        Margin="30 0"
                        Padding="25 50"
                        Background="#E8E8E8">
                    <StackPanel VerticalAlignment="Center">
                        <Image Source="/Resources/address-location-map.png" Width="50" Opacity="0.5"/>
                        <TextBlock Text="Park road, Onewhero Bay, New Zealand" 
                                    FontSize="20"
                                    TextAlignment="Center"
                                    FontWeight="Normal" 
                                    Margin="0 15 0 0"
                                   TextWrapping="Wrap"/>   
                    </StackPanel>
                </Border>
            </Grid>

            <StackPanel Margin="0 50 0 0">
                <TextBlock Text="Opening Hours" 
                           FontSize="32"
                           Margin="30 0 30 0"/>

                <UniformGrid Rows="3" Columns="2" Margin="20" Width="500" Height="150" HorizontalAlignment="Left">
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="Day" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="SemiBold"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="Opening Hours" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="SemiBold"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="Moday - Friday" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="9:00 am - 5:00 pm" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="Saturday - Sunday" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="8:00 am - 6:00 pm" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
                    </Border>
                </UniformGrid>
            </StackPanel>

            <StackPanel Margin="0 50 0 0">
                <TextBlock Text="Submit an Inquiry" 
                           FontSize="32"
                           Margin="30 0"/>

                <Grid>
                    <TextBlock Text="Search Events..." 
                               VerticalAlignment="Top"
                               FontSize="20"
                               Margin="50 40 0 0"
                               Foreground="#636363"
                               x:Name="Placeholder_InquiryInput"/>

                    <TextBox Height="200"
                             Width="700"
                             HorizontalAlignment="Left"
                             Margin="30 20 30 0"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Visible"
                             TextWrapping="Wrap"
                             BorderBrush="Black"
                             BorderThickness="1"
                             FontSize="18"
                             Padding="20"
                             Background="Transparent"
                             x:Name="InquiryInput"
                             TextChanged="InquiryInput_TextChanged"/>
                </Grid>

                <Button Content="Submit"
                        FontSize="20"
                        Width="100"
                        Height="50"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="30 20 0 0"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>