<Page x:Class="_106_Assessment_2.View.Pages.Admin.ModifyEventPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Modify Event"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40" Width="700">

            <TextBlock Text="Modify Event" FontSize="30" FontWeight="SemiBold" Foreground="#333" Margin="0 0 0 30"/>

            <!-- Event List -->
            <TextBlock Text="Select an Event" FontSize="18" FontWeight="SemiBold" Margin="0 0 0 10"/>
            <ComboBox x:Name="EventComboBox" Width="400" Height="30" SelectionChanged="EventComboBox_SelectionChanged"
                      DisplayMemberPath="Title"/>

            <!-- Event Image Upload -->
            <Border Background="#F8F8F8" CornerRadius="12" Padding="20" Margin="0 20 0 20">
                <StackPanel>
                    <TextBlock Text="Event Image" FontSize="16" FontWeight="SemiBold" Margin="0 0 0 5"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 5 0 0">
                        <Button Content="Select Image" Width="120" Height="35" Click="SelectImageButton_Click"/>
                        <TextBlock x:Name="SelectedImageTextBlock" Text="No file selected" Margin="10 0 0 0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Image x:Name="PreviewImage" Width="200" Height="120" Margin="0 10 0 0" Stretch="UniformToFill"/>
                </StackPanel>
            </Border>

            <!-- Event Details -->
            <Border Background="#F8F8F8" CornerRadius="12" Padding="20" Margin="0 0 0 20">
                <StackPanel>
                    <TextBlock Text="Event Title" FontSize="16" FontWeight="SemiBold" Margin="0 5 0 5"/>
                    <TextBox x:Name="EventTitleTextBox" Height="30" FontSize="14" Padding="5"/>

                    <TextBlock Text="Event Date" FontSize="16" FontWeight="SemiBold" Margin="0 15 0 5"/>
                    <DatePicker x:Name="EventDatePicker" Height="30" FontSize="14"/>

                    <TextBlock Text="Price" FontSize="16" FontWeight="SemiBold" Margin="0 15 0 5"/>
                    <TextBox x:Name="PriceTextBox" Height="30" FontSize="14" Padding="5"/>

                    <TextBlock Text="Tags (comma-separated)" FontSize="16" FontWeight="SemiBold" Margin="0 15 0 5"/>
                    <TextBox x:Name="TagsTextBox" Height="30" FontSize="14" Padding="5"/>

                    <CheckBox x:Name="FeaturedCheckBox" Content="Featured Event" FontSize="16" FontWeight="SemiBold" Margin="0 15 0 0"/>
                </StackPanel>
            </Border>

            <!-- Event Description -->
            <Border Background="#F8F8F8" CornerRadius="12" Padding="20" Margin="0 0 0 20">
                <StackPanel>
                    <TextBlock Text="Event Description" FontSize="16" FontWeight="SemiBold" Margin="0 0 0 5"/>
                    <TextBox x:Name="EventDescriptionTextBox" Width="Auto" Height="120" TextWrapping="Wrap" AcceptsReturn="True" FontSize="14" Padding="5"/>
                </StackPanel>
            </Border>

            <!-- Save Changes Button -->
            <Button Content="Save Changes" Width="180" Height="45" FontSize="16" FontWeight="Bold"
                    Background="#2196F3" Foreground="White" Margin="0 10 0 30" HorizontalAlignment="Left"
                    Cursor="Hand" Click="SaveChangesButton_Click"/>
        </StackPanel>
    </ScrollViewer>
</Page>
