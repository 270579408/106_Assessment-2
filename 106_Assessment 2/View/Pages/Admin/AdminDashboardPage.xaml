<Page x:Class="_106_Assessment_2.View.Pages.Admin.AdminDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_106_Assessment_2.View.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminDashboardPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">

                <!-- Welcome Header -->
                <TextBlock Text="Welcome back, Admin"
                       FontSize="32"
                       FontWeight="Bold"
                       Margin="0 0 0 10"/>

                <TextBlock Text="Here is your overview of the park activity"
                       FontSize="16"
                       Foreground="#666"
                       Margin="0 0 0 20"/>

                <!-- Profile Card -->
                <Border Background="#F8F8F8" CornerRadius="12" Padding="20" Margin="0 0 0 30">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="80" Height="80" Fill="#ddd"/>
                        <StackPanel Margin="20 0 0 0">
                            <TextBlock Text="Admin User"
                                   FontSize="22"
                                   FontWeight="Bold"/>
                            <TextBlock Text="admin@onewhero.co.nz"
                                   FontSize="14"
                                   Foreground="#666"
                                   Margin="0 5 0 0"/>
                            <TextBlock Text="Role: System Administrator"
                                   FontSize="14"
                                   Foreground="#666"/>
                        </StackPanel>
                    </StackPanel>
                </Border>


                <!-- Statistics -->
                <TextBlock Text="Website Overview" FontSize="26" FontWeight="Bold"/>
                <WrapPanel Margin="0 20 0 30" ItemWidth="280" ItemHeight="140">

                    <!-- New Members -->
                    <Border Background="#F2F2F2" Padding="20" CornerRadius="12" Margin="0 0 20 20">
                        <StackPanel>
                            <TextBlock Text="New Members (Today)" FontSize="16"/>
                            <TextBlock x:Name="NewMembersText" Text="0"
                                   FontSize="36" FontWeight="Bold"
                                   Margin="0 10 0 0"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Visitors -->
                    <Border Background="#F2F2F2" Padding="20" CornerRadius="12" Margin="0 0 20 20">
                        <StackPanel>
                            <TextBlock Text="Total Visitors" FontSize="16"/>
                            <TextBlock x:Name="TotalVisitorsText" Text="0"
                                   FontSize="36" FontWeight="Bold"
                                   Margin="0 10 0 0"/>
                        </StackPanel>
                    </Border>

                    <!-- Active Events -->
                    <Border Background="#F2F2F2" Padding="20" CornerRadius="12" Margin="0 0 20 20">
                        <StackPanel>
                            <TextBlock Text="Active Events" FontSize="16"/>
                            <TextBlock x:Name="ActiveEventsText" Text="0"
                                   FontSize="36" FontWeight="Bold"
                                   Margin="0 10 0 0"/>
                        </StackPanel>
                    </Border>

                </WrapPanel>


                <!-- Upcoming Events -->
                <TextBlock Text="Upcoming Events" FontSize="26" FontWeight="Bold" Margin="0 0 0 10"/>

                <ScrollViewer HorizontalScrollBarVisibility="Auto">
                    <StackPanel x:Name="UpcomingEventsPanel" Orientation="Horizontal" Margin="0 10 0 40"/>
                </ScrollViewer>


                <!-- Recent Messages -->
                <TextBlock Text="Recent Messages" FontSize="26" FontWeight="Bold"/>
                <StackPanel x:Name="MessagesPanel" Margin="0 20 0 0"/>

            </StackPanel>
        </ScrollViewer>
    </Page>
