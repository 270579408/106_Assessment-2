<Page x:Class="_106_Assessment_2.View.Pages.Admin.VisitorManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White"
      Title="Visitor Management">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">

            <!-- Header -->
            <TextBlock Text="Visitor Management" FontSize="30" FontWeight="Bold" Margin="0 0 0 20"/>

            <TextBlock Text="Search by name or email" FontSize="16"/>
            <!-- Search Area -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBox x:Name="SearchTextBox"
                         Width="300" Height="32" FontSize="14" />
                <Button Content="Search" Width="100" Height="32" Margin="10 0 0 0"
                        Click="SearchButton_Click"/>
                <Button Content="Reset" Width="100" Height="32" Margin="10 0 0 0"
                        Click="ResetButton_Click"/>
            </StackPanel>

            <!-- Visitor Grid -->
            <DataGrid x:Name="VisitorsGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      Height="450">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="250"/>
                    <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" Width="150"/>

                    <!-- Actions Column -->
                    <DataGridTemplateColumn Header="Actions" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete"
                                        Width="90" Height="26"
                                        Background="#F44336"
                                        Foreground="White"
                                        Tag="{Binding Id}"
                                        Click="DeleteVisitorButton_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>

            </DataGrid>

        </StackPanel>
    </ScrollViewer>

</Page>
