<Page x:Class="_106_Assessment_2.View.Pages.Admin.DashBoard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_106_Assessment_2.View.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="3000
      " d:DesignWidth="800"
      Background="White"
      Title="AdminDashboardPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">

            <!-- Welcome Header -->
            <TextBlock Text="Welcome back, Admin"
                       FontSize="32"
                       FontWeight="Bold"
                       Margin="0 0 0 10"/>

            <TextBlock Text="Here is your overview of the park activity"
                       FontSize="16"
                       Foreground="#666"
                       Margin="0 0 0 20"/>

            <!-- Profile Card -->
            <Border Background="#F8F8F8" CornerRadius="12" Padding="20" Margin="0 0 0 30">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="80" Height="80" Fill="#ddd"/>
                    <StackPanel Margin="20 0 0 0">
                        <TextBlock Text="Admin User"
                                   FontSize="22"
                                   FontWeight="Bold"/>
                        <TextBlock Text="admin@onewhero.co.nz"
                                   FontSize="14"
                                   Foreground="#666"
                                   Margin="0 5 0 0"/>
                        <TextBlock Text="Role: System Administrator"
                                   FontSize="14"
                                   Foreground="#666"/>
                    </StackPanel>
                    <Button Content="Logout"
                            Padding="20 10"
                            FontSize="18"
                            Background="#2E7DFF"
                            Foreground="White"
                            BorderBrush="Transparent"
                            Cursor="Hand"
                            Width="150"
                            Height="50"
                            HorizontalAlignment="Left"
                            Click="Logout_Click"
                            Margin="100 0 0 0"/>
                </StackPanel>
            </Border>


            <!-- Statistics -->
            <TextBlock Text="Overview" FontSize="26" FontWeight="Bold"/>
            <WrapPanel Margin="0 20 0 30" ItemWidth="280" ItemHeight="140">

                <Border Background="#F2F2F2" Padding="20" CornerRadius="12" Margin="0 0 20 20">
                    <StackPanel>
                        <TextBlock Text="Total Visitors" FontSize="16"/>
                        <TextBlock x:Name="TotalVisitorsText" Text="0"
                                   FontSize="36" FontWeight="Bold"
                                   Margin="0 10 0 0"/>
                    </StackPanel>
                </Border>

                <Border Background="#F2F2F2" Padding="20" CornerRadius="12" Margin="0 0 20 20">
                    <StackPanel>
                        <TextBlock Text="Total Upcoming Event Booking" FontSize="16"/>
                        <TextBlock x:Name="TotalUpcomingEventBookingText" Text="0"
                                   FontSize="36" FontWeight="Bold"
                                   Margin="0 10 0 0"/>
                    </StackPanel>
                </Border>

                <Border Background="#F2F2F2" Padding="20" CornerRadius="12" Margin="0 0 20 20">
                    <StackPanel>
                        <TextBlock Text="Upcoming Events" FontSize="16"/>
                        <TextBlock x:Name="UpcomingEventsText" Text="0"
                                   FontSize="36" FontWeight="Bold"
                                   Margin="0 10 0 0"/>
                    </StackPanel>
                </Border>

            </WrapPanel>


            <!-- Quick Action Buttons -->
            <StackPanel>
                <TextBlock Text="Quick Action Buttons" FontSize="26" FontWeight="Bold" Margin="0 0 0 10"/>

                <WrapPanel Margin="0 10 0 30">
                    <Button Content="Add Event" Width="150" Height="40" Margin="10" Click="AddEventButton_Click"/>
                    <Button Content="Modify Event" Width="150" Height="40" Margin="10" Click="ModifyEventButton_Click"/>
                    <Button Content="Manage Bookings" Width="150" Height="40" Margin="10" Click="ManageBookingButton_Click"/>
                    <Button Content="Community Posts Moderation" Width="200" Height="40" Margin="10" Click="PostModerationButton_Click"/>
                </WrapPanel>
            </StackPanel>


            <!-- Visitor Insights Section -->
            <TextBlock Text="Visitor Insights" FontSize="26" FontWeight="Bold" Margin="0 20 0 10"/>

            <WrapPanel Margin="0 10 0 30" ItemWidth="280">

                <Border Background="#F2F2F2" Padding="20" CornerRadius="12" Margin="0 20 20 20">
                    <StackPanel>
                        <TextBlock Text="Today's Visitors" FontSize="16"/>
                        <TextBlock x:Name="TodaysVisitorsText" Text="0"
                                   FontSize="36" FontWeight="Bold"
                                   Margin="0 10 0 0"/>
                    </StackPanel>
                </Border>

                <Border Background="#F2F2F2" Padding="20" CornerRadius="12" Margin="0 20 20 20">
                    <StackPanel>
                        <TextBlock Text="This Week's Visitors" FontSize="16"/>
                        <TextBlock x:Name="WeeklyVisitorsText" Text="0"
                                   FontSize="36" FontWeight="Bold"
                                   Margin="0 10 0 0"/>
                    </StackPanel>
                </Border>
            </WrapPanel>


            <!-- Popular Attractions -->
            <TextBlock Text="Popular Attractions" FontSize="26" FontWeight="Bold" Margin="0 20 0 10"/>

            <WrapPanel Margin="0 10 0 30" ItemWidth="280">
                <Border Background="#F2F2F2" CornerRadius="12" Padding="20" Margin="0 0 20 20">
                    <StackPanel>
                        <TextBlock Text="Top Attraction" FontSize="16"/>
                        <TextBlock x:Name="TopAttractionText" Text="Kiwi House"
                                   FontSize="24" FontWeight="Bold" Margin="0 10 0 0"/>
                    </StackPanel>
                </Border>

                <Border Background="#F2F2F2" CornerRadius="12" Padding="20" Margin="0 0 20 20">
                    <StackPanel>
                        <TextBlock Text="Second Most Popular" FontSize="16"/>
                        <TextBlock x:Name="SecondAttractionText" Text="Reptile Zone"
                                   FontSize="24" FontWeight="Bold" Margin="0 10 0 0"/>
                    </StackPanel>
                </Border>
            </WrapPanel>


            <!-- Recent Activity Table -->
            <TextBlock Text="Recent Activity" FontSize="26" FontWeight="Bold" Margin="0 30 0 10"/>

            <DataGrid x:Name="RecentActivityGrid"
                        AutoGenerateColumns="False"
                        HeadersVisibility="Column"
                        CanUserAddRows="False"
                        Margin="0 10 0 30"
                        Height="300">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Visitor" Binding="{Binding VisitorName}" Width="200"/>
                    <DataGridTextColumn Header="Activity" Binding="{Binding Activity}" Width="250"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>


        </StackPanel>
    </ScrollViewer>
</Page>
