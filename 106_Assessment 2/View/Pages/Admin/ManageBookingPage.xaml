<Page x:Class="_106_Assessment_2.View.Pages.Admin.ManageBookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Manage Bookings"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">

            <!-- Header -->
            <TextBlock Text="Manage Bookings" FontSize="30" FontWeight="Bold" Margin="0 0 0 20"/>

            <!-- Search Box -->
            <TextBlock Text="Search by visitor's name or event's name" FontSize="16"/>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBox x:Name="SearchTextBox" Width="300" Height="30" FontSize="14" 
                         Margin="0 0 10 0"/>
                <Button Content="Search" Width="100" Height="30" Click="SearchButton_Click"/>
                <Button Content="Reset" Width="100" Height="30" Margin="10 0 0 0" Click="ResetButton_Click"/>
            </StackPanel>

            <!-- Bookings DataGrid -->
            <DataGrid x:Name="BookingsGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                      HeadersVisibility="Column" Height="400">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Booking Name" Binding="{Binding BookingName}" Width="200"/>
                    <DataGridTextColumn Header="Event Title" Binding="{Binding EventTitle}" Width="200"/>
                    <DataGridTextColumn Header="Event Date" Binding="{Binding EventDate}" Width="150"/>
                    <DataGridTemplateColumn Header="Actions" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Cancel" Width="100" Height="25" 
                                        Click="CancelBookingButton_Click"
                                        Tag="{Binding Id}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </ScrollViewer>
</Page>
